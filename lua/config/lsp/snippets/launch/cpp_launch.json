{
  "Launch C++": {
    "prefix": "cpp-launch",
    "body": [
      "{",
      "  \"version\": \"0.2.0\",",
      "  \"configurations\": [",
      "    {",
      "      \"name\": \"Debug\",",
      "      \"type\": \"cppdbg\",",
      "      \"request\": \"launch\",",
      "      \"program\": \"${workspaceFolder}/build/${1:program}\",",
      "      \"args\": [],",
      "      \"cwd\": \"${workspaceFolder}\",",
      "      \"stopAtEntry\": false,",
      "      \"MIMode\": \"gdb\",",
      "      \"setupCommands\": [",
      "        {",
      "          \"description\": \"Enable pretty-printing for gdb\",",
      "          \"text\": \"-enable-pretty-printing\",",
      "          \"ignoreFailures\": true",
      "        }",
      "      ]",
      "    }",
      "  ]",
      "}"
    ],
    "description": "Standard GDB C++ launch config"
  }
}

